<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light py-4 mb-0">プロフィール編集</h5>
      <%= form_with model: @user do |f| %>
      <div class="form-body p-4">
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-user"></i></span>
            </div>
            <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
          </div>
          <%= image_tag @user.get_profile_image(70,70) %>

          <div class="input-group my-3">
            <label>
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
            </label>
          </div>
          <input type="submit" name="commit" value="変更を保存" class="btn btn-lg btn-block btn-info mt-5" data-disable-with="変更を保存">
         <% end %>
      </div>
    </div>
  </div>
</div>